<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:background="@drawable/round_text_view"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Project"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"></TextView>


        <TextView
            android:id="@+id/txtProject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="14C1686"
            android:textColor="@color/base_color_text"
            android:textSize="@dimen/_12sdp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:background="@drawable/round_text_view"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Employee Name"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"></TextView>


        <TextView
            android:id="@+id/txtEmpName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="14C1686"
            android:textColor="@color/base_color_text"
            android:textSize="@dimen/_12sdp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:background="@drawable/round_text_view"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Date"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"></TextView>


        <TextView
            android:id="@+id/txtDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="14C1686"
            android:textColor="@color/base_color_text"
            android:textSize="@dimen/_12sdp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:background="@drawable/round_text_view"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Current Status"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"></TextView>


        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="14C1686"
            android:textColor="@color/base_color_text"
            android:textSize="@dimen/_12sdp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:background="@drawable/round_text_view"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Attachment"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"></TextView>


        <TextView
            android:id="@+id/txtAttachment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:drawableLeft="@drawable/link_24"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="View"
            android:textColor="@color/red_notification"
            android:textSize="@dimen/_12sdp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:background="@drawable/round_text_view"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="First Comment"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"></TextView>


        <TextView
            android:id="@+id/txtComment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="14C1686"
            android:textColor="@color/base_color_text"
            android:textSize="@dimen/_12sdp"></TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/txtDetails"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/round_button_ripple"
        android:drawableRight="@drawable/next_24"
        android:gravity="center"
        android:paddingRight="@dimen/_5sdp"
        android:text="Details"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"></TextView>


</LinearLayout>