<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolba_reminder"></include>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/base_color_reminder"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/base_color_reminder"
            android:text="Search Project Status"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_16sdp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Search your project"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:paddingLeft="@dimen/_10sdp" />


        <Spinner
            android:id="@+id/spSearchProjectByCategory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/spinner_bg1" />

        <TextView
            android:id="@+id/txtProjectSearchWith"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Search your project"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:visibility="gone" />


        <Spinner
            android:id="@+id/spSearchByProjectName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            android:background="@drawable/spinner_bg1" />

        <Spinner
            android:id="@+id/spSearchByProjectStatus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            android:background="@drawable/spinner_bg1" />


        <LinearLayout
            android:id="@+id/ll_DateRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".15"
                android:layout_gravity="center"
                android:text="From"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:paddingLeft="@dimen/_5sdp"></TextView>

            <TextView
                android:id="@+id/txtDateFrom"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight=".35"
                android:layout_gravity="center"
                android:paddingRight="@dimen/_5sdp"
                android:text="10-12-2021"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:background="@drawable/round_edit_text"
                android:drawableRight="@drawable/date_range_24">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:layout_gravity="center"
                android:text="To"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:paddingLeft="@dimen/_5sdp"></TextView>

            <TextView
                android:id="@+id/txtDateTo"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight=".35"
                android:layout_gravity="center"
                android:paddingRight="@dimen/_5sdp"
                android:text="15-12-2021"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:background="@drawable/round_edit_text"
                android:drawableRight="@drawable/date_range_24">

            </TextView>

        </LinearLayout>


        <TextView
            android:id="@+id/txtSearch"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_30sdp"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/white"
            android:text="Search"
            android:drawableLeft="@drawable/search_24"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_30sdp"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/round_button_ripple"></TextView>

    </LinearLayout>
</layout>