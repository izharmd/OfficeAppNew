<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolba_reminder"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:background="@color/base_color"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:background="#8164a2"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="#b2a2c6"
            android:gravity="center"
            android:text="Select Item"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"></TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/round_button_expense_category_button"
            android:gravity="center"
            android:text="View Item"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"></TextView>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select which items to add  for expense  calculation"
        android:textStyle="normal"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/base_color"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/tick"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center|left"
            android:text="Save"
            android:textColor="@color/base_color"
            android:textSize="@dimen/_12sdp"></TextView>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/cancel"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center|left"
            android:text="Cancel"
            android:textColor="@color/base_color"
            android:textSize="@dimen/_12sdp"></TextView>


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/recySelectItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp">

    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>