<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/toolba_reminder"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@color/base_color"
        android:gravity="center"
        android:text="Profile"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:background="@drawable/round_text_view"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Employee Name"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"></TextView>


        <TextView
            android:id="@+id/txtProject"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Mr James"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:background="@drawable/round_text_view"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Employee Id"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"></TextView>


        <TextView
            android:id="@+id/txtEmpName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="000S32"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:background="@drawable/round_text_view"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Designation"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"></TextView>


        <TextView
            android:id="@+id/txtDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Software Developer"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:background="@drawable/round_text_view"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Joining Date"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"></TextView>


        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="15 Aug 2015"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:background="@drawable/round_text_view"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Email id"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"></TextView>


        <TextView
            android:id="@+id/txtAttachment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="james@bitwavesolution.com"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:background="@drawable/round_text_view"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Contact Number"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"></TextView>


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="07911 123456"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8"
            android:background="@drawable/round_text_view"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Date of Birth"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"></TextView>


        <TextView
            android:id="@+id/txtComment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="25 March 1985"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"></TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/txtDetails"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/round_button_ripple"
        android:drawableRight="@drawable/next_24"
        android:gravity="center"
        android:paddingRight="@dimen/_5sdp"
        android:text="Details"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:visibility="gone"></TextView>


</LinearLayout>