<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:drawableLeft="@drawable/project_name_24"
            android:drawablePadding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/_5sdp"
            android:text="Project Name"
            android:textSize="@dimen/_12sdp"></TextView>


        <TextView
            android:id="@+id/txtProjectName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="14C1686"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"></TextView>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/end_date_range_24"
            android:drawablePadding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="Start Date"
            android:textSize="@dimen/_12sdp"></TextView>


        <TextView
            android:id="@+id/txtProStartDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="14C1686"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/end_date_range_24"
            android:drawablePadding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:paddingRight="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:text="Agreed Delivery Date"
            android:textSize="@dimen/_12sdp"></TextView>


        <TextView
            android:id="@+id/txtDeliveryDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="14C1686"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"></TextView>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/status_24"
            android:drawablePadding="@dimen/_5sdp"
            android:textColor="@color/black"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_5sdp"
            android:text="Project Status"
            android:textSize="@dimen/_12sdp"></TextView>


        <TextView
            android:id="@+id/txtProStatus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="@dimen/_10sdp"
            android:text="14C1686"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"></TextView>

    </LinearLayout>



</LinearLayout>