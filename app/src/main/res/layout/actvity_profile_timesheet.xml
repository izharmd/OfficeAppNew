<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolba_reminder"></include>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        android:background="@drawable/bg2_top">

        <ImageView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:src="@drawable/user_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

        </ImageView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            style="@style/icon_view"
            android:src="@drawable/user_mame"></ImageView>

        <TextView
            style="@style/textView"
            android:text="Employee Name"></TextView>

        <TextView
            android:id="@+id/txtUserName"
            style="@style/textView_2"
            android:text="Mr James"></TextView>
    </LinearLayout>

    <View style="@style/View_1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            style="@style/icon_view"
            android:src="@drawable/user_id_24"></ImageView>

        <TextView
            style="@style/textView"
            android:text="Employee Id"></TextView>

        <TextView
            android:id="@+id/txtChangePassword"
            style="@style/textView_2"
            android:text="10047"
            android:textColor="@color/black"></TextView>
    </LinearLayout>

    <View style="@style/View_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            style="@style/icon_view"
            android:src="@drawable/depart_ment_24"></ImageView>

        <TextView
            style="@style/textView"
            android:text="Designation"></TextView>

        <TextView
            android:id="@+id/txtDisplayName"
            style="@style/textView_2"
            android:text="Software Developer"></TextView>
    </LinearLayout>

    <View style="@style/View_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            style="@style/icon_view"
            android:src="@drawable/date_range_24"></ImageView>

        <TextView
            style="@style/textView"
            android:text="Joining Date"></TextView>

        <TextView
            android:id="@+id/txtEmailId"
            style="@style/textView_2"
            android:text="12 May 2015"></TextView>
    </LinearLayout>

    <View style="@style/View_1" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            style="@style/icon_view"
            android:src="@drawable/email_id"></ImageView>

        <TextView
            style="@style/textView"
            android:text="Email Id"></TextView>

        <TextView
            style="@style/textView_2"
            android:text="james@bitwavesolution.com"></TextView>
    </LinearLayout>


    <View style="@style/View_1" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            style="@style/icon_view"
            android:src="@drawable/dob24"></ImageView>

        <TextView
            style="@style/textView"
            android:text="Date of Birth"></TextView>

        <TextView
            android:id="@+id/txtPostCode"
            style="@style/textView_2"
            android:text="20 Dec 1980"></TextView>
    </LinearLayout>

    <View style="@style/View_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            style="@style/icon_view"
            android:src="@drawable/phone_28"></ImageView>

        <TextView
            style="@style/textView"
            android:text="Mobile No"></TextView>

        <TextView
            android:id="@+id/txtMobileNo"
            style="@style/textView_2"
            android:text="izhar@bitwavesolution.com"></TextView>
    </LinearLayout>

</LinearLayout>