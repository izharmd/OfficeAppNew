<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolba_reminder"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@color/base_color"
            android:gravity="center"
            android:text="Leave Summary"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:background="@drawable/round_textview2"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_10sdp"
                android:text="Employee Name"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"/>


            <TextView
                android:id="@+id/txtEmpName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_30sdp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:background="@drawable/round_textview2"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_10sdp"
                android:text="Total Leave"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"/>


            <TextView
                android:id="@+id/txtTotalLeave"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_30sdp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:background="@drawable/round_textview2"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_10sdp"
                android:text="Earned Leave"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"/>


            <TextView
                android:id="@+id/txtEarnLeave"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_30sdp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:background="@drawable/round_textview2"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_10sdp"
                android:text="Casual Leave"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"/>


            <TextView
                android:id="@+id/txtCasualLeave"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_30sdp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:background="@drawable/round_textview2"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_10sdp"
                android:text="Sick Leave"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"/>


            <TextView
                android:id="@+id/txtSickLeave"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_30sdp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".8"
                android:background="@drawable/round_textview2"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_10sdp"
                android:text="Remaining Leave"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"/>


            <TextView
                android:id="@+id/txtRemainLeave"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center|left"
                android:paddingLeft="@dimen/_30sdp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtDetails"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/round_button_ripple"
            android:drawableRight="@drawable/next_24"
            android:gravity="center"
            android:paddingRight="@dimen/_5sdp"
            android:text="Details"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:visibility="gone"></TextView>


    </LinearLayout>
</layout>